{
  "name": "Quote",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "description": "The quote text content"
    },
    "author": {
      "type": "string",
      "description": "The author of the quote"
    },
    "category": {
      "type": "string",
      "enum": [
        "inspiration",
        "motivation",
        "love",
        "wisdom",
        "success",
        "life",
        "happiness",
        "friendship"
      ],
      "default": "inspiration",
      "description": "Category of the quote"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false,
      "description": "Whether the quote is marked as favorite"
    },
    "background_color": {
      "type": "string",
      "enum": [
        "blue",
        "purple",
        "green",
        "orange",
        "pink",
        "teal"
      ],
      "default": "blue",
      "description": "Background color theme for the quote widget"
    }
  },
  "required": [
    "text",
    "author"
  ]
}